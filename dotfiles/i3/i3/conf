# i3 Configuration
set $mod Mod4

# Define workspaces
set $ws_1 "1"
set $ws_2 "2"
set $ws_S "3:S"
set $ws_T "4:T"
set $ws_5 "5"
set $ws_6 "6"
set $ws_7 "7"
set $ws_8 "8"
set $ws_9 "9"
set $ws_C "10:C"
set $ws_G "11:G"
set $ws_P "12:P"
set $ws_R "13:R"
set $ws_V "14:V"
set $ws_W "15:W"
set $ws_X "16:X"
set $ws_Z "17:Z"

# Appearance
font pango:monospace 10
default_border pixel 2
default_floating_border pixel 2
smart_borders on
smart_gaps on

# Window gaps
gaps inner 2
gaps outer 2

# Added color scheme (matching your AeroSpace active_color)
client.focused          #567c0e0 #567c0e0 #ffffff #567c0e0 #567c0e0
client.unfocused        #494d64 #494d64 #888888 #494d64 #494d64

# Startup applications
exec --no-startup-id dunst
exec --no-startup-id picom
exec --no-startup-id nm-applet
exec_always --no-startup-id $HOME/.config/polybar/launch.sh

# Added modes (similar to AeroSpace service mode)
mode "resize" {
        bindsym m resize shrink width 10 px
        bindsym n resize grow height 10 px
        bindsym e resize shrink height 10 px
        bindsym i resize grow width 10 px
        bindsym Return mode "default"
        bindsym Escape mode "default"
}
bindsym $mod+r mode "resize"

# Layout Switching
bindsym $mod+period layout toggle split
bindsym $mod+comma layout toggle tabbed stacking

# Focus movement
bindsym $mod+m focus left
bindsym $mod+n focus down
bindsym $mod+e focus up
bindsym $mod+i focus right
bindsym $mod+left focus left
bindsym $mod+down focus down
bindsym $mod+up focus up
bindsym $mod+right focus right

# Move window
bindsym $mod+Shift+m move left
bindsym $mod+Shift+n move down
bindsym $mod+Shift+e move up
bindsym $mod+Shift+i move right
bindsym $mod+Shift+left move left
bindsym $mod+Shift+down move down
bindsym $mod+Shift+up move up
bindsym $mod+Shift+right move right

# Added smart resize (like AeroSpace)
bindsym $mod+k resize shrink width 70 px
bindsym $mod+h resize grow width 70 px
bindsym $mod+Shift+minus resize shrink width 50 px
bindsym $mod+Shift+equal resize grow width 50 px

# Workspace switching
bindsym $mod+1 workspace $ws_1
bindsym $mod+2 workspace $ws_2
bindsym $mod+3 workspace $ws_S
bindsym $mod+4 workspace $ws_T
bindsym $mod+5 workspace $ws_5
bindsym $mod+6 workspace $ws_6
bindsym $mod+7 workspace $ws_7
bindsym $mod+8 workspace $ws_8
bindsym $mod+9 workspace $ws_9
bindsym $mod+c workspace $ws_C
bindsym $mod+f fullscreen
bindsym $mod+g workspace $ws_G
bindsym $mod+o workspace back_and_forth
bindsym $mod+p workspace $ws_P
bindsym $mod+r workspace $ws_R
bindsym $mod+s workspace $ws_S
bindsym $mod+t workspace $ws_T
bindsym $mod+v workspace $ws_V
bindsym $mod+w workspace $ws_W
bindsym $mod+x workspace $ws_X
bindsym $mod+z workspace $ws_Z

# Added floating rules
for_window [window_role="pop-up"] floating enable
for_window [window_role="bubble"] floating enable
for_window [window_role="task_dialog"] floating enable
for_window [window_role="Preferences"] floating enable
for_window [window_type="dialog"] floating enable
for_window [window_type="menu"] floating enable

# Window rules
assign [class="Firefox"] $ws_S
assign [class="WezTerm"] $ws_T
assign [class="Slack"] $ws_C
assign [class="Spotify"] $ws_P
assign [class="Thunderbird"] $ws_X
assign [class="zoom"] $ws_Z
assign [class="Microsoft Teams"] $ws_Z
assign [class="obsidian"] $ws_W
assign [class="Signal"] $ws_G
assign [class="Telegram"] $ws_G
assign [class="WhatsApp"] $ws_G

# Added system mode (like AeroSpace service mode)
set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bindsym l exec --no-startup-id i3lock, mode "default"
    bindsym e exec --no-startup-id i3-msg exit, mode "default"
    bindsym s exec --no-startup-id systemctl suspend, mode "default"
    bindsym h exec --no-startup-id systemctl hibernate, mode "default"
    bindsym r exec --no-startup-id systemctl reboot, mode "default"
    bindsym Shift+s exec --no-startup-id systemctl poweroff, mode "default"
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Shift+semicolon mode "$mode_system"

# Scratchpad
bindsym $mod+Shift+h move scratchpad
bindsym $mod+h scratchpad show

# Added media keys
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous
